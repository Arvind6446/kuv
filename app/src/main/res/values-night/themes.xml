<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kuv" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Kuv" parent="Base.Theme.Kuv" />

    <style name="mercedes">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#E8E9F1</item>
    </style>
    <style name="description">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#C5C6CC</item>
    </style>

    <style name="km_hr">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#E8E9F1</item>
    </style>
    <style name="subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#71727A</item>
    </style>
    <style name="dashboard">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#8F9098</item>
    </style>

    <style name="title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F8F9FE</item>
    </style>

    <style name="time_desc">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#E8E9F1</item>
    </style>

    <style name="drive_record_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8F9098</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/primary</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/primary</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>
</resources>