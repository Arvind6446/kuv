<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <!-- Drawer button on the left -->
                <ImageButton
                    android:id="@+id/btnDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:contentDescription="Open Drawer"/>

                <!-- Centered text -->
                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Driving Record"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="10dp">
           <TextView
               android:id="@+id/departure_i"
               android:layout_width="339dp"
               android:layout_height="15dp"
               android:text="Departure Information"
               android:textAppearance="@style/drive_record_title"
               android:gravity="top"
               />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="2"
           >
           <androidx.appcompat.widget.AppCompatEditText
               android:id="@+id/etName"
               android:layout_height="@dimen/_43sdp"
               android:layout_width="match_parent"
               android:imeOptions="actionNext"
               android:textColor="@color/white"
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:hint="Departure Date"
               android:layout_weight="1"
               android:textColorHint="@color/text_hint"
               android:textSize="@dimen/_14sdp"
               android:background="@drawable/grey_boarder_rectangle"

               android:inputType="text"/>

           <androidx.appcompat.widget.AppCompatEditText
               android:id="@+id/etName1"
               android:layout_height="@dimen/_43sdp"
               android:layout_width="match_parent"
               android:imeOptions="actionNext"
               android:textColor="@color/white"
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/_10sdp"
               android:layout_weight="1"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:hint="Departure Time"
               android:textColorHint="@color/text_hint"
               android:textSize="@dimen/_14sdp"
               android:background="@drawable/grey_boarder_rectangle"

               android:inputType="text"/>

       </LinearLayout>

           <androidx.appcompat.widget.AppCompatEditText
               android:id="@+id/etName2"
               android:layout_height="@dimen/_43sdp"
               android:layout_width="match_parent"
               android:imeOptions="actionNext"
               android:textColor="@color/white"
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:hint="Address"
               android:textColorHint="@color/text_hint"
               android:textSize="@dimen/_14sdp"
               android:background="@drawable/grey_boarder_rectangle"

               android:inputType="text"/>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/departure_i_4"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Arrival Information"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etName4"
                    android:layout_height="@dimen/_43sdp"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Arrival Date"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/_14sdp"
                    android:background="@drawable/grey_boarder_rectangle"

                    android:inputType="text"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etName5"
                    android:layout_height="@dimen/_43sdp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Arrival Time"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/_14sdp"
                    android:background="@drawable/grey_boarder_rectangle"

                    android:inputType="text"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName6"
                android:layout_height="@dimen/_43sdp"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Address"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/grey_boarder_rectangle"

                android:inputType="text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/arrival_info_2"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Arrival Information"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName7"
                android:layout_height="@dimen/_43sdp"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Departure accumulated distance"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/grey_boarder_rectangle"

                android:inputType="text"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName8"
                android:layout_height="@dimen/_43sdp"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Arrival accumulated distance"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/grey_boarder_rectangle"

                android:inputType="text"/>



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName9"
                android:layout_height="@dimen/_43sdp"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Distance"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/grey_boarder_rectangle"

                android:inputType="text"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/drivingPurpose"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Driving Purpose"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.google.android.material.chip.Chip
                    android:id="@+id/business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
               android:layout_weight="1"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:background="@drawable/button_layout"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_margin="8dp"
                    android:text="Business" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/commute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:background="@drawable/button_layout"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_margin="8dp"
                    android:text="Commute" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:background="@drawable/button_layout"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_margin="8dp"
                    android:text="Normal" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Title"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName10"
                android:layout_height="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Memos (Maximum 500 byte)"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/_14sdp"
                android:inputType="textMultiLine"
                android:minLines="8"
                android:background="@drawable/grey_boarder_rectangle"
                />




        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>