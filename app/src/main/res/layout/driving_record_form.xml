<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <!-- Drawer button on the left -->
                <ImageButton
                    android:id="@+id/btnDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:contentDescription="Open Drawer"/>

                <!-- Centered text -->
                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Driving Record"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="10dp">
           <TextView
               android:id="@+id/departure_i"
               android:layout_width="339dp"
               android:layout_height="15dp"
               android:text="Departure Information"
               android:textAppearance="@style/drive_record_title"
               android:gravity="top"
               />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="2"
           >
           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/departureDateEditLoginWrapper"
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_height="60dp"
               android:layout_margin="8dp"
               android:hint="Departure date"
               style="@style/drive_record_title"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusTopEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               app:boxCornerRadiusTopStart="8dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/departureDate"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:inputType="text"
                   android:textColor="#000000"
                   android:padding="7dp"
                   android:textColorLink="#FFFFFF" />

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/departureTimeEditLoginWrapper"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_weight="1"
               android:layout_margin="8dp"
               android:hint="Departure Time"
               style="@style/drive_record_title"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusTopEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               app:boxCornerRadiusTopStart="8dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/departureTime"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:inputType="text"
                   android:textColor="#000000"
                   android:padding="7dp"
                   android:textColorLink="#FFFFFF" />

           </com.google.android.material.textfield.TextInputLayout>

       </LinearLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/departureAddress"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_weight="1"
               android:layout_margin="8dp"
               android:hint="Address"
               style="@style/drive_record_title"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusTopEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               app:boxCornerRadiusTopStart="8dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/departureAddressEditLogin_3"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:inputType="text"
                   android:textColor="#000000"
                   android:padding="7dp"
                   android:textColorLink="#FFFFFF" />

           </com.google.android.material.textfield.TextInputLayout>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/departure_i_4"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Arrival Information"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/arrivalDateEditLoginWrapper"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:hint="Arrival date"
                    style="@style/drive_record_title"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/arrivalDateEditLogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:padding="7dp"
                        android:textColorLink="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/arrivalTimeEditLoginWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:hint="Arrival Time"
                    style="@style/drive_record_title"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/arrivalTimeEditLogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:padding="7dp"
                        android:textColorLink="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/arrivalAddressEditLoginWrapper"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:hint="Address"
                style="@style/drive_record_title"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/arrivalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:padding="7dp"
                    android:textColorLink="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/arrival_info_2"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Arrival Information"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/deptAccumulated"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:hint="Departure accumulated distance"
                style="@style/drive_record_title"
                app:suffixText="Km"
                app:suffixTextColor="@color/white"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/deptAccumulatedText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:padding="7dp"
                    android:textColorLink="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/arrAccumulated"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:suffixText="Km"
                app:suffixTextColor="@color/white"
                android:hint="Arrival accumulated distance"
                style="@style/drive_record_title"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/arrAccumulatedText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:padding="7dp"
                    android:textColorLink="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dist"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:suffixText="Km"
                app:suffixTextColor="@color/white"
                android:hint="Distance"
                style="@style/drive_record_title"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/distText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:padding="7dp"
                    android:textColorLink="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/drivingPurpose"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Driving Purpose"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.google.android.material.chip.Chip
                    android:id="@+id/business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
               android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_margin="8dp"
                    android:text="Business" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/commute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_margin="8dp"
                    android:text="Commute" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_margin="8dp"
                    android:text="Normal" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="339dp"
                android:layout_height="15dp"
                android:text="Title"
                android:textAppearance="@style/drive_record_title"
                android:gravity="top"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/memos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:suffixText="Km"
                app:suffixTextColor="@color/white"
                android:hint="Memos (Maximum 500 byte)"
                style="@style/drive_record_title"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/memosText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:minLines="8"
                    android:textColor="#000000"
                    android:padding="7dp"
                    android:textColorLink="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>